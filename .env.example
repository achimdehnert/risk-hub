# Django
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_ALLOWED_HOSTS=.localhost,localhost,127.0.0.1,.schutztat.de,.schutztat.com

# Database
DATABASE_URL=postgres://app:app@db:5432/app

# Redis (optional for future async)
REDIS_URL=redis://redis:6379/0

# Tenant resolution via subdomain
TENANT_BASE_DOMAIN=localhost
# Optional: support multiple base domains. Order matters (most specific first).
TENANT_BASE_DOMAINS=localhost,schutztat.de,schutztat.com
TENANT_ALLOW_LOCALHOST=1
TENANT_RESERVED_SUBDOMAINS=www

# S3 / MinIO (documents)
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_BUCKET=documents
S3_USE_SSL=0
S3_PUBLIC_BASE_URL=http://localhost:9000/documents

# LLM Gateway
LLM_GATEWAY_URL=http://llm-gateway:8100
LLM_GATEWAY_TIMEOUT=120

# Security
CSRF_TRUSTED_ORIGINS=http://*.localhost:8080,http://localhost:8080,https://*.schutztat.de,https://*.schutztat.com
